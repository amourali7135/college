var programId = '<%= @program.id %>';
function toggleLikeButton(programId, innerHTML) {
let likeButton = document.querySelector(`.like-icon[data-id='${programId}']`)
likeButton.classList.toggle('red');
}
toggleLikeButton(programId);

<%# function toggleLikeButton(programId, favoritedProgram) {
let likeButton = document.querySelector(`.like-icon[data-id='${programId}']`)

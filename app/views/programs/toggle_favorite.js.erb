if (likeButton.classList.contains('red')) {
const favoriteList = document.querySelector('.favorites');
favoriteList.insertAdjacentHTML('beforeend', favoritedProgram)
}
else {
document.querySelector(`.favorite[data-id='${programId}']`).remove()
}
}
toggleLikeButton(programId, '<%= j render "programs/program", program: @program %>'); %>

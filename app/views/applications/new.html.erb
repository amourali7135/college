<div class="row align-items-center justify-content-center">
  <div class="col-sm-8 card p-4 m-4 bg-light ">
      <h2>Apply to your dream position and improve your career</h2>
      <p>Upon applying, the program head will receive your personal information</p>

      <%= simple_form_for [@program, @application] do |f|%>
      <%= f.input :title, label:  "What would you like to name your program?", placeholder: "4-week long carpeting crash course" %>
      <%= f.input :active, as: :hidden, value: true %>
      <div style="text-align:center">
      <%= f.button :submit, 'Submit', class: 'btn btn-primary'%>
      </div>
      <% end %>
      </div>
    </div>
  </div>



